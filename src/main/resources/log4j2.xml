        </Logger>
        <Logger name="org.hibernate.SQL" level="trace" additivity="false">
            <AppenderRef ref="RollingFile_jpc_04_hibernate"/>
        </Logger>
        <Logger name="org.hibernate.type" level="trace" additivity="false">
            <AppenderRef ref="RollingFile_jpc_04_hibernate"/>
        </Logger>
-->
    </Loggers>
</Configuration>